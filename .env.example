# ============================================================
# ENVIRONMENT VARIABLES TEMPLATE - GLPI + Chatwoot
# ============================================================
# Скопируйте этот файл в .env и заполните своими значениями
# ============================================================

# Timezone
TZ=Asia/Omsk

# ============================================================
# GLPI DATABASE (MariaDB)
# ============================================================
GLPI_DB_ROOT_PASSWORD=<сгенерируйте_сильный_пароль>
GLPI_DB_NAME=glpi
GLPI_DB_USER=glpi
GLPI_DB_PASSWORD=<сгенерируйте_сильный_пароль>

# ============================================================
# CHATWOOT
# ============================================================
# Сгенерировать: openssl rand -hex 64
CHATWOOT_SECRET_KEY_BASE=<сгенерируйте_64_байта_в_hex>
CHATWOOT_FRONTEND_URL=https://chat.yapomogu.com
CHATWOOT_DEFAULT_LOCALE=ru

# ============================================================
# CHATWOOT DATABASE (PostgreSQL)
# ============================================================
CHATWOOT_DB_NAME=chatwoot
CHATWOOT_DB_USER=chatwoot
CHATWOOT_DB_PASSWORD=<сгенерируйте_сильный_пароль>

# ============================================================
# REDIS
# ============================================================
REDIS_PASSWORD=<сгенерируйте_сильный_пароль>

# ============================================================
# SMTP SETTINGS
# ============================================================
SMTP_ADDRESS=mx1.flipthecode.ru
SMTP_PORT=465
SMTP_USERNAME=it.test@yapomogu.com
SMTP_PASSWORD=<ваш_smtp_пароль>
SMTP_DOMAIN=yapomogu.com
SMTP_AUTHENTICATION=plain
SMTP_TLS=true
SMTP_SSL=true
SMTP_ENABLE_STARTTLS_AUTO=false
MAILER_SENDER_EMAIL=it.test@yapomogu.com

# ============================================================
# RESOURCE LIMITS (опционально)
# ============================================================
GLPI_MEMORY_LIMIT=2g
GLPI_CPU_LIMIT=2.0
CHATWOOT_MEMORY_LIMIT=2g
CHATWOOT_CPU_LIMIT=2.0
DB_MEMORY_LIMIT=1g
DB_CPU_LIMIT=1.0
